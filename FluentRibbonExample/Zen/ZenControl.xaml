<UserControl x:Class="FluentRibbonExample.Zen.ZenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FluentRibbonExample.Zen"
             xmlns:behavior="clr-namespace:FluentRibbonExample.Behavior"
             d:DataContext="{d:DesignInstance Type=local:ZenViewModel}"
             behavior:ViewModelInjectionBehavior.ViewModel="{x:Type local:ZenViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Button Content="Fetch Zen" Command="{Binding FetchZenCommand}" />
        <Label Content="{Binding Zen}" />
    </StackPanel>
</UserControl>
